<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tlv_back"
    android:layoutDirection="ltr"
   >

    <LinearLayout
        android:id="@+id/sixtySecondsTimersHolderView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:layout_weight="15"
        android:gravity = "center"
        android:layout_gravity="center"
        >

    </LinearLayout>




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:orientation="vertical"
   >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal"
            android:background="#50FFFFFF"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tel-Aviv, Arlozorov st. 59 "
                android:textSize="22dp"
                android:id="@+id/adress_timer"
                android:layout_weight="2"
                android:textColor="#FFFFFF"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       android:orientation="horizontal"
        android:layout_margin="10dp"


       >

        <com.rey.material.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center"
            android:id="@+id/cancel_timer"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#58416d"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            android:textStyle="italic"
            />




        <com.rey.material.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/update_button"
            android:text="Scan code"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="2"
            android:background="#58416d"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"

            />



        <com.rey.material.widget.Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/next_timer"
            android:text="Return to locker"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#58416d"
            android:layout_margin="2dp"
            android:textColor="#FFFFFF"
            />


    </LinearLayout>

</LinearLayout>





</LinearLayout>
