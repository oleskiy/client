                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"

                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_first_name">


                        </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_last_name"
                    android:orientation="horizontal">

                 <!--  <include layout="@layout/last_name"/>-->
                </LinearLayout>
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_last_name_il">

                    <include layout="@layout/last_name_il"/>
                </LinearLayout>-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_mail"
                    android:orientation="horizontal">

                  <!-- <include layout="@layout/mail"/>-->
                </LinearLayout>

               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:id="@+id/ll_mail_il">

                    <include layout="@layout/mail_il"/>
                </LinearLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/ll_phone">

                    <!--<include layout="@layout/phone_number"/>-->




                </LinearLayout>
              <!--  <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#80FFFFFF"
